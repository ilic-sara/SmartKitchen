
@if(Categories is not null && Categories.Count > 0)
{
    <div class="row justify-content-center my-3">
        @if (DarkText)
        {
            <h3 class="text-center gray-background text-light p-2">Categories</h3>
        }
        else
        {
            <h3 class="text-center p-2">Categories</h3>
        }
        <div class="d-flex flex-row flex-wrap justify-content-evenly">
            @foreach (var category in Categories)
            {
                <Card Text="@category.Name"
                      NavigateTo="@($"/show-recipes/category/{category.Id}/{category.Name}/1")"
                      PictureUrl="@category.PictureUrl">
                </Card>
            }
        </div>
    </div>
}

@code {

    [Parameter]
    public List<Category> Categories { get; set; } = [];

    [Parameter]
    public bool DarkText { get; set; } = false;
}
