
@if(Cuisines is not null && Cuisines.Count > 0)
{
    <div class="row justify-content-center my-3">
        @if (DarkText)
        {
            <h3 class="text-center gray-background text-light p-2">Cuisines</h3>
        }
        else
        {
            <h3 class="text-center p-2">Cuisines</h3>
        }
        <div class="d-flex flex-row flex-wrap justify-content-evenly">
            @foreach (var cuisine in Cuisines)
            {
                <Card Text="@cuisine.Name"
                      NavigateTo="@($"/show-recipes/cuisine/{cuisine.Id}/{cuisine.Name}/1")"
                      PictureUrl="@cuisine.PictureUrl">
                </Card>
            }
        </div>
    </div>
}

@code {

    [Parameter]
    public List<Cuisine> Cuisines { get; set; } = [];

    [Parameter]
    public bool DarkText { get; set; } = false;
}
