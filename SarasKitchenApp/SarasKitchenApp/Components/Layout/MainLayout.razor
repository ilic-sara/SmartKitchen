@inherits LayoutComponentBase
@inject IConfiguration Configuration
@inject NavigationManager NavigationManager

<div class="wrapper">
    @if (isAdminPage && !isStartPage)
    {
        <NavMenuAdmin />
    }
    else if(!isAdminPage && !isStartPage)
    {
        <NavMenu />
    }
    <main class="">
        @Body
    </main>
    <footer class="border-top footer gray-background text-white p-4 mt-2 fw-bold">
        <div class="container text-center">
            &copy; 2025 - Smart kitchen
            <br />
        </div>
    </footer>
</div>
<script>
    window.apiBaseUrl = "@Configuration["ApiBaseAddress"]";
</script>
@code {
    private bool isAdminPage => NavigationManager.Uri.Contains("/admin") 
                            && !NavigationManager.Uri.Contains("/log-in") 
                            && !NavigationManager.Uri.Contains("/sign-up");

	private bool isStartPage => NavigationManager.Uri.EndsWith("/");


}